@page "/admin/organizacionedit/{id:int}"

@inherits OrganizacionEditBase
@using GolfV12.Shared;

<h3>Organizacion Agergar / Editar</h3>

@if (LaOrganizacion == null)
{
    <div class="spinner"></div>
} else
{
    <RadzenTemplateForm TItem="G110Organizacion" Data=@LaOrganizacion Submit=@OnSubmit>
        <div class="row">
            <div class="col-md-4">
                <RadzenLabel Component="Clave" Text="Clave" />
            </div>
            <div class="col-md-8 align-items-center d-flex">
                <RadzenTextBox Name="Clave" @bind-Value=@LaOrganizacion.Clave />
                <RadzenRequiredValidator Component="Clave" Text="La Clave es requeriada!" />
            </div>
        </div>
   
       <div class="row">
           <div class="col-md-4">
                <RadzenLabel Component="Nombre" Text="Nombre de la Organizacion" />
            </div>
            <div class="col-md-8 align-items-center d-flex">
                <RadzenTextBox Name="Nombre" @bind-Value=@LaOrganizacion.Nombre />
            <RadzenRequiredValidator Component="Nombre" Text="El Nombre es requerido!" />
            </div>
        </div>
<div class="row">
            <div class="col-md-4">
                <RadzenLabel Component="Desc" Text="Descripcion" />
            </div>
            <div class="col-md-8 align-items-center d-flex">
                <RadzenTextArea Name="Desc" @bind-Value=@LaOrganizacion.Desc />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <RadzenLabel Component="Domicilio" Text="Domicilio" />
            </div>
            <div class="col-md-8 align-items-center d-flex">
                <RadzenTextArea Name="Domicilio" @bind-Value=@LaOrganizacion.Domicilio />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <RadzenLabel Component="Estado" Text="Estado" />
            </div>
            <div class="col-md-8 align-items-center d-flex">
                <RadzenDropDown Name="Estado" @bind-Value=@ElEstado AllowFiltering="true" 
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                Data=@LosEstados TextProperty="Titulo" ValueProperty="Id"/>
            </div>
        </div>

        
        @if(Id > 0) 
        {
            <div class="row">
                <div class="col-md-4">
                    <RadzenLabel Component="Status" Text="Borrar este registro?" />
                </div>
                <div class="col-md-8 align-items-center d-flex">
                    SI!<RadzenSwitch  Name="Status" @bind-Value=@LaOrganizacion.Status/>NO!
                </div>
            </div>
        }
        <div class="row">
            <div class="cols-sm-3 cols-md-3">
                <NavLink class="nav-link" href="/admin/organizacion">Cancelar</NavLink>
            </div>
            <div class="cols-sm-9 cols-md-9"> 
                <RadzenButton ButtonType="ButtonType.Submit" Text="@ButtonTexto" />
            </div>
        </div>
        
 <div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-8 align-items-center d-flex">
               
    </div>
</div>
    </RadzenTemplateForm>
}