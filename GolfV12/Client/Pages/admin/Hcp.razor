@page "/admin/hcp/{playerId}"
@page "/admin/hcp/"

@inherits HcpBase
@using GolfV12.Shared;


<h3>Hcp</h3>
@if (LosHcps == null)
{
    <div class="spinner"></div>
} else
{
    
        <div class="nav-item px-3">
            <NavLink class="nav-link" href=@($"/admin/hcpedit?playerid={playerid}&hcpid=0")>
                <span class="oi oi-plus" aria-hidden="true"></span> Nuevo HCP para un jugador 
            </NavLink>
       </div>
        
<RadzenDataGrid AllowFiltering="true" AllowColumnResize="true" FilterMode="FilterMode.Advanced" 
        PageSize="50" AllowPaging="true" AllowSorting="true" LogicalFilterOperator="LogicalFilterOperator.Or"
        Data="@LosHcps" TItem="G128Hcp" >
        <Columns>
            <RadzenDataGridColumn TItem="G128Hcp" Property="Id" Title="Id" Width="100px" Frozen="true">
                <Template Context="data">
                    <label>@data.Id</label>
                    <RadzenLink Icon="edit" Path=@($"/admin/hcpedit?playerid={data.PlayerId}&hcpid={data.Id}") />
                </Template>
            </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="G128Hcp" Property="PlayerId" Title="Jugador" Width="100px" Frozen="true">
                <Template Context="data">
                    @if (@LosPlayers.ContainsKey(data.PlayerId)) {<label>@LosPlayers[data.PlayerId]</label> } else {<label>@LosPlayers["vacio"]</label>} 
                    
                    <RadzenLink Icon="edit" Path=@($"/admin/hcpedit?playerid={data.PlayerId}&hcpid={data.Id}") />
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="G128Hcp" Property="Fecha" Title="Fecha" FormatString="{0:d}" />
            <RadzenDataGridColumn TItem="G128Hcp" Property="Bandera" Title="Bandera" />
            <RadzenDataGridColumn TItem="G128Hcp" Property="Hcp" Title="Hcp" />
            
            <RadzenDataGridColumn TItem="G128Hcp"  Title="Estado" >
                <Template Context="data">
                    @if(data.Status == false) {<div style:"color-font:Red"><label style:"color:red"> Registro Borrado </label></div>}
                </Template>
            </RadzenDataGridColumn>
            
        </Columns>
</RadzenDataGrid>
}
