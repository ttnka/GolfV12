@page "/bitacora"

@inherits BitacoraBase
@using GolfV12.Shared;

<h3>Bitacora</h3>

@if (bitacoraAll == null)
{
    <div class="spinner"></div>
} else
{    
  
    <RadzenDataGrid AllowFiltering="true" AllowColumnResize="true" FilterMode="FilterMode.Advanced" 
        PageSize="45" AllowPaging="true" PagerHorizontalAlign="HorizontalAlign.Left" ShowPagingSummary="true"
        AllowSorting="true" Data="@bitacoraAll" TItem="G190Bitacora" LogicalFilterOperator="LogicalFilterOperator.Or">
        <Columns>
            <RadzenDataGridColumn TItem="G190Bitacora" Property="Id" Title="Id" Width="50px" Frozen="true" />
            <RadzenDataGridColumn TItem="G190Bitacora" Property="Fecha" Title="Fecha" FormatString="{0:d}" Width="120px" Frozen="true" />
            <RadzenDataGridColumn TItem="G190Bitacora" Property="Accion" Title="Accion" Width="110px" />
            <RadzenDataGridColumn TItem="G190Bitacora" Property="Usuario" Title="Usuario" Width="200px" >
                <Template Context="data">
                    @if (todosPlayer.ContainsKey(data.UsuarioId)) { @todosPlayer[data.UsuarioId]} else {<label>Sin Nombre!!!</label>}

                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="G190Bitacora" Property="Desc" Title="Descripcion" />

        </Columns>
</RadzenDataGrid>
}


